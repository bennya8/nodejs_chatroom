<%- include ../common/header %>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default login-panel" style="margin: 30px 0;">
                    <div class="panel-heading">
                        <div class="panel-title">User Login</div>
                    </div>
                    <div class="panel-body">
                        <form method="post" action="/doLogin">
                            <div class="form-group">
                                <label>Nickname</label>
                                <input type="text" class="form-control" name="nickname" placeholder="Please Enter Your Username">
                            </div>
                            <div class="form-group">
                                <label class="radio-inline">
                                    <input type="radio" name="genre" value="male" checked> Male
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="genre" value="female"> Female
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">Have Fun ^_^</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


